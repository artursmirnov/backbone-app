<script type="text/template" id="edit-form-template">
    <form id="edit-form" class="edit-form container-fluid">
        {{ form_row(form._token) }}

        <h2 class="edit-form__title">Application form</h2>

        <div class="row">
            <div class="col-sm-5">

                {# User Name #}
                <div class="edit-form__field js-field">
                    <input type="text" value="<%= name %>" class="edit-form__input js-user-name" required>
                    <label class="edit-form__label">User Name</label>
                </div>

            </div>
            <div class="col-sm-4">

                {# Birthday #}
                <div class="edit-form__field js-field">
                    <input type="text" value="<%= birthdayTitle %>" class="edit-form__input js-user-birthday">
                    <label class="edit-form__label">Birthdate</label>
                </div>

            </div>
        </div>
        <div class="row">
            <div class="col-sm-5">

                {# Email #}
                <div class="edit-form__field js-field">
                    <input type="email" value="<%= email %>" class="edit-form__input js-user-email" required>
                    <label class="edit-form__label">Email</label>
                </div>

            </div>
            <div class="col-sm-5">

                {# Site URL #}
                <div class="edit-form__field js-field">
                    <input type="url" value="<%= siteUrl %>" class="edit-form__input js-user-site">
                    <label class="edit-form__label">URL</label>
                </div>

            </div>
        </div>
        <div class="row">
            <div class="col-sm-5">

                {# Phone number #}
                <div class="edit-form__field js-field">
                    <input type="tel" value="<%= phone %>" class="edit-form__input js-user-phone">
                    <label class="edit-form__label">Phone number</label>
                </div>

            </div>
            <div class="col-sm-5">
                <div class="row">
                    <div class="col-xs-4">

                        {# Skill number #}
                        <div class="edit-form__field js-field">
                            <input type="number" value="<%= skill %>" class="edit-form__input js-user-skill">
                            <label class="edit-form__label">Skill number</label>
                        </div>

                    </div>
                    <div class="col-xs-3 text-right edit-form__radio-container js-field">

                        {# Gender Male #}
                        <label class="edit-form__radio js-user-gender-male">
                            Male
                        </label>

                    </div>
                    <div class="col-xs-3 text-right edit-form__radio-container js-field">

                        {# Gender Female #}
                        <label class="edit-form__radio js-user-gender-female">
                            Female
                        </label>

                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-7">
                <div class="row">
                    <div class="col-sm-5">

                        {# Password #}
                        <div class="edit-form__field js-field">
                            <input type="password" value="<%= password %>" class="edit-form__input js-user-password">
                            <label class="edit-form__label">Password</label>
                        </div>

                    </div>
                    <div class="col-sm-5">

                        {# Password confirmation #}
                        <div class="edit-form__field js-field">
                            <input type="password" value="<%= confirm %>" class="edit-form__input js-user-password-confirm">
                            <label class="edit-form__label">Repeat Password</label>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-10">

                {# About #}
                <div class="edit-form__field js-field">
                    <textarea class="edit-form__input--textarea js-user-about" value="<%= about %>" rows="1"><%= about %></textarea>
                    <label class="edit-form__label">Enter a brief description of yourself and interest</label>
                </div>

            </div>
        </div>

    </form>
</script>